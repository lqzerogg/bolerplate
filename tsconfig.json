
{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./.dist",
    "noImplicitAny": true,
    // "removeComments": true,
    "moduleResolution": "Node",
    "allowJs": true,
    "strict": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "preserveConstEnums": true,
    "sourceMap": true
  },
  "include": ["./src/**/*"]
}